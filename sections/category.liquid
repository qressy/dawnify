{% schema %}
{
  "name": "Custom Collection",
  "settings": [
    {
      "type": "text",
      "id": "section_heading",
      "label": "Section Heading",
      "default": "Lorem Ipsum"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "desktop_columns",
      "min": 2,
      "max": 4,
      "step": 1,
      "label": "Desktop Columns",
      "default": 4
    },
    {
      "type": "range",
      "id": "card_height_desktop",
      "min": 300,
      "max": 800,
      "step": 50,
      "unit": "px",
      "label": "Card Height (Desktop)",
      "default": 500
    },
    {
      "type": "range",
      "id": "card_height_mobile",
      "min": 200,
      "max": 500,
      "step": 25,
      "unit": "px",
      "label": "Card Height (Mobile)",
      "default": 300
    },
    {
      "type": "select",
      "id": "content_position",
      "label": "Title & Button Position",
      "options": [
        {
          "value": "flex-start",
          "label": "Top"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "flex-end",
          "label": "Bottom"
        }
      ],
      "default": "center"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#3d1d10"
    },
    {
      "type": "color",
      "id": "border_color",
      "label": "Border Color",
      "default": "#e0e0e0"
    },
    {
      "type": "color",
      "id": "overlay_color",
      "label": "Image Overlay Color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Overlay Opacity",
      "default": 30
    },
    {
      "type": "color",
      "id": "collection_title_color",
      "label": "Collection Title Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "button_bg_color",
      "label": "Button Background Color",
      "default": "#3d1d10"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "button_hover_bg_color",
      "label": "Button Hover Background Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "button_hover_text_color",
      "label": "Button Hover Text Color",
      "default": "#3d1d10"
    },
    {
      "type": "header",
      "content": "Button Style"
    },
    {
      "type": "range",
      "id": "button_border_radius",
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "px",
      "label": "Button Border Radius",
      "default": 0
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "section_padding_top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Section Padding Top",
      "default": 50
    },
    {
      "type": "range",
      "id": "section_padding_bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Section Padding Bottom",
      "default": 50
    }
  ],
  "blocks": [
    {
      "type": "collection",
      "name": "Collection Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Collection Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Collection Title",
          "default": "Lorem Ipsum"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "Lorem Ipsum"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Collection",
      "blocks": [
        {
          "type": "collection",
          "settings": {
            "title": "Lorem Ipsum"
          }
        },
        {
          "type": "collection",
          "settings": {
            "title": "Lorem Ipsum"
          }
        },
        {
          "type": "collection",
          "settings": {
            "title": "Lorem Ipsum"
          }
        },
        {
          "type": "collection",
          "settings": {
            "title": "Lorem Ipsum"
          }
        }
      ]
    }
  ]
}
{% endschema %}

{% assign r = section.settings.overlay_color | color_extract: 'red' %}
{% assign g = section.settings.overlay_color | color_extract: 'green' %}
{% assign b = section.settings.overlay_color | color_extract: 'blue' %}
{% assign opacity = section.settings.overlay_opacity | divided_by: 100.0 %}

<style>
  .custom-collection-section {
    background-color: {{ section.settings.background_color }};
    padding: {{ section.settings.section_padding_top }}px 0 {{ section.settings.section_padding_bottom }}px;
    border-top: 1px solid {{ section.settings.border_color }};
    border-bottom: 1px solid {{ section.settings.border_color }};
  }

  .custom-collection-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .custom-collection-heading {
    text-align: center;
    margin-bottom: 40px;
    color: {{ section.settings.heading_color }};
    font-size: 2.5rem;
    font-weight: 300;
    letter-spacing: 1px;
  }

  .custom-collection-grid {
    display: grid;
    grid-template-columns: repeat({{ section.settings.desktop_columns }}, 1fr);
    gap: 20px;
  }

  .custom-collection-card {
    position: relative;
    overflow: hidden;
    border-radius: 0;
    cursor: pointer;
    transition: transform 0.3s ease;
    height: {{ section.settings.card_height_desktop }}px;
  }

  .custom-collection-card:hover {
    transform: translateY(-5px);
  }

  .custom-collection-card-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .custom-collection-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba({{ r }}, {{ g }}, {{ b }}, {{ opacity }});
    z-index: 1;
    pointer-events: none;
  }

  .custom-collection-card-content {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: {{ section.settings.content_position }};
    align-items: center;
    padding: 40px 20px;
    z-index: 2;
  }

  .custom-collection-title {
    color: {{ section.settings.collection_title_color }};
    font-size: 2.5rem;
    font-weight: 300;
    letter-spacing: 3px;
    margin-bottom: 15px;
    text-align: center;
    text-transform: uppercase;
  }

  .custom-collection-subtitle {
    color: {{ section.settings.collection_title_color }};
    font-size: 1.2rem;
    font-weight: 300;
    letter-spacing: 1px;
    margin-bottom: 30px;
    text-align: center;
  }

  .custom-collection-button {
    position: relative;
    display: inline-block;
    padding: 12px 30px;
    background-color: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_text_color }};
    text-decoration: none;
    font-size: 14px;
    font-weight: 300;
    letter-spacing: 2px;
    text-transform: uppercase;
    border: none;
    border-radius: {{ section.settings.button_border_radius }}px;
    cursor: pointer;
    overflow: hidden;
    z-index: 1;
    transition: all 0.4s ease;
  }

  .custom-collection-button::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background-color: {{ section.settings.button_hover_bg_color }};
    transition: left 0.4s ease;
    z-index: -1;
    border-radius: {{ section.settings.button_border_radius }}px;
  }

  .custom-collection-button:hover {
    color: {{ section.settings.button_hover_text_color }};
  }

  .custom-collection-button:hover::before {
    left: 0;
  }

  @media screen and (max-width: 1024px) {
    .custom-collection-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 15px;
    }

    .custom-collection-card {
      height: 400px;
    }

    .custom-collection-heading {
      font-size: 2rem;
      margin-bottom: 30px;
    }

    .custom-collection-title {
      font-size: 2rem;
      letter-spacing: 2px;
    }

    .custom-collection-subtitle {
      font-size: 1rem;
    }

    .custom-collection-button {
      padding: 10px 25px;
      font-size: 13px;
    }
  }

  @media screen and (max-width: 768px) {
    .custom-collection-section {
      padding: 30px 0;
    }

    .custom-collection-container {
      padding: 0 15px;
    }

    .custom-collection-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 10px;
    }

    .custom-collection-card {
      height: {{ section.settings.card_height_mobile }}px;
    }

    .custom-collection-heading {
      font-size: 1.5rem;
      margin-bottom: 25px;
    }

    .custom-collection-card-content {
      padding: 20px 15px;
    }

    .custom-collection-title {
      font-size: 1.5rem;
      letter-spacing: 1.5px;
      margin-bottom: 10px;
    }

    .custom-collection-subtitle {
      font-size: 0.9rem;
      margin-bottom: 20px;
    }

    .custom-collection-button {
      padding: 10px 20px;
      font-size: 12px;
      letter-spacing: 1.5px;
    }
  }

  @media screen and (max-width: 480px) {
    .custom-collection-grid {
      gap: 8px;
    }

    .custom-collection-title {
      font-size: 1.2rem;
      letter-spacing: 1px;
    }

    .custom-collection-subtitle {
      font-size: 0.8rem;
    }

    .custom-collection-button {
      padding: 8px 18px;
      font-size: 11px;
    }
  }
</style>

<div class="custom-collection-section">
  <div class="custom-collection-container">
    {% if section.settings.section_heading != blank %}
      <h2 class="custom-collection-heading">{{ section.settings.section_heading }}</h2>
    {% endif %}

    <div class="custom-collection-grid">
      {% for block in section.blocks %}
        {% if block.type == 'collection' %}
          <div class="custom-collection-card" {{ block.shopify_attributes }}>
            {% if block.settings.image != blank %}
              {{
                block.settings.image
                | image_url: width: 1200
                | image_tag: class: 'custom-collection-card-image', loading: 'lazy', alt: block.settings.title
              }}
            {% else %}
              {{ 'product-1' | placeholder_svg_tag: 'custom-collection-card-image' }}
            {% endif %}

            <div class="custom-collection-card-content">
              <h3 class="custom-collection-title">{{ block.settings.title }}</h3>

              {% if block.settings.button_link != blank %}
                <a href="{{ block.settings.button_link }}" class="custom-collection-button">
                  {{ block.settings.button_text }}
                </a>
              {% else %}
                <span class="custom-collection-button">
                  {{ block.settings.button_text }}
                </span>
              {% endif %}
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>
