{% comment %}
  Category Grid Section
  Features: Masonry layout - 1 large left image, 2 stacked right images
{% endcomment %}

<style>
  .category-grid-section-{{ section.id }} {
    background-color: #ffffff;
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
  }

  .category-grid-container-{{ section.id }} {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .section-heading-{{ section.id }} {
    text-align: {{ section.settings.heading_alignment }};
    margin-bottom: {{ section.settings.heading_spacing }}px;
  }

  .section-heading-{{ section.id }} h2 {
    font-size: {{ section.settings.heading_font_size }}px;
    font-weight: 300;
    text-transform: uppercase;
    letter-spacing: 2px;
    margin: 0;
    color: #000000;
  }

  .category-grid-{{ section.id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: {{ section.settings.grid_gap }}px;
  }

  .category-card-{{ section.id }} {
    position: relative;
    overflow: hidden;
    border-radius: {{ section.settings.border_radius }}px;
  }

  .category-card-{{ section.id }}.card-large {
    grid-row: span 2;
    aspect-ratio: unset;
  }

  .category-card-{{ section.id }}.card-small {
    aspect-ratio: 16 / 9;
  }

  .category-card-{{ section.id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    transition: transform 0.5s ease;
  }

  .category-card-{{ section.id }}:hover img {
    transform: scale(1.05);
  }

  .category-overlay-{{ section.id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    background: rgba(0, 0, 0, 0.2);
    padding: 40px;
  }

  .category-overlay-{{ section.id }}.position-top-left {
    justify-content: flex-start;
    align-items: flex-start;
    text-align: left;
  }

  .category-overlay-{{ section.id }}.position-top-center {
    justify-content: flex-start;
    align-items: center;
    text-align: center;
  }

  .category-overlay-{{ section.id }}.position-top-right {
    justify-content: flex-start;
    align-items: flex-end;
    text-align: right;
  }

  .category-overlay-{{ section.id }}.position-center-left {
    justify-content: center;
    align-items: flex-start;
    text-align: left;
  }

  .category-overlay-{{ section.id }}.position-center {
    justify-content: center;
    align-items: center;
    text-align: center;
  }

  .category-overlay-{{ section.id }}.position-center-right {
    justify-content: center;
    align-items: flex-end;
    text-align: right;
  }

  .category-overlay-{{ section.id }}.position-bottom-left {
    justify-content: flex-end;
    align-items: flex-start;
    text-align: left;
  }

  .category-overlay-{{ section.id }}.position-bottom-center {
    justify-content: flex-end;
    align-items: center;
    text-align: center;
  }

  .category-overlay-{{ section.id }}.position-bottom-right {
    justify-content: flex-end;
    align-items: flex-end;
    text-align: right;
  }

  .category-title-{{ section.id }} {
    color: #ffffff;
    font-size: {{ section.settings.title_font_size }}px;
    font-weight: 300;
    letter-spacing: 3px;
    text-transform: uppercase;
    margin-bottom: {{ section.settings.title_spacing }}px;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
  }

  .category-button-{{ section.id }} {
    display: inline-block;
    color: #ffffff;
    font-size: {{ section.settings.button_font_size }}px;
    font-weight: 300;
    letter-spacing: 2px;
    text-transform: uppercase;
    text-decoration: none;
    padding: 8px 20px;
    border: 1px solid #3d1d10;
    background-color:#3d1d10;
    transition: all 0.4s ease;
    position: relative;
    overflow: hidden;
    z-index: 1;
    border-radius: 6px!important;
  }

  .category-button-{{ section.id }}::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background-color: #ffffff;
    transition: left 0.4s ease;
    z-index: -1;
  }

  .category-button-{{ section.id }}:hover::before {
    left: 0;
  }

  .category-button-{{ section.id }}:hover {
    border-color: #ffffff;
    color: #3d1d10;
  }

  @media screen and (max-width: 989px) {
    .section-heading-{{ section.id }} h2 {
      font-size: {{ section.settings.heading_font_size_mobile }}px;
    }

    .section-heading-{{ section.id }} {
      margin-bottom: {{ section.settings.heading_spacing_mobile }}px;
    }

    .category-grid-{{ section.id }} {
      gap: {{ section.settings.grid_gap_mobile }}px;
    }

    .category-overlay-{{ section.id }} {
      padding: 30px;
    }

    .category-title-{{ section.id }} {
      font-size: {{ section.settings.title_font_size_mobile }}px;
      letter-spacing: 2px;
    }

    .category-button-{{ section.id }} {
      font-size: {{ section.settings.button_font_size_mobile }}px;
      padding: 10px 24px;
      letter-spacing: 1.5px;
    }
  }

  @media screen and (max-width: 749px) {
    .category-grid-{{ section.id }} {
      grid-template-columns: 1fr;
      gap: {{ section.settings.grid_gap_mobile }}px;
    }

    .category-card-{{ section.id }}.card-large {
      grid-row: span 1;
      aspect-ratio: 4 / 3;
    }

    .category-card-{{ section.id }}.card-small {
      aspect-ratio: 4 / 3;
    }

    .category-grid-section-{{ section.id }} {
      padding: {{ section.settings.padding_top_mobile }}px 0 {{ section.settings.padding_bottom_mobile }}px;
    }

    .category-overlay-{{ section.id }} {
      padding: 24px;
    }
  }
</style>

<section class="category-grid-section-{{ section.id }}">
  <div class="category-grid-container-{{ section.id }}">
    {% if section.settings.section_heading != blank %}
      <div class="section-heading-{{ section.id }}">
        <h2>{{ section.settings.section_heading }}</h2>
      </div>
    {% endif %}

    <div class="category-grid-{{ section.id }}">
      {% for block in section.blocks %}
        {% if forloop.index == 1 %}
          <div class="category-card-{{ section.id }} card-large" {{ block.shopify_attributes }}>
        {% else %}
          <div class="category-card-{{ section.id }} card-small" {{ block.shopify_attributes }}>
        {% endif %}
          {% if block.settings.image %}
            <img 
              src="{{ block.settings.image | img_url: '1000x' }}" 
              srcset="{{ block.settings.image | img_url: '400x' }} 400w,
                      {{ block.settings.image | img_url: '600x' }} 600w,
                      {{ block.settings.image | img_url: '800x' }} 800w,
                      {{ block.settings.image | img_url: '1000x' }} 1000w,
                      {{ block.settings.image | img_url: '1200x' }} 1200w"
              sizes="(max-width: 749px) 100vw, {% if forloop.index == 1 %}50vw{% else %}50vw{% endif %}"
              alt="{{ block.settings.title | escape }}"
              loading="lazy"
            >
          {% else %}
            {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
          {% endif %}
          
          <div class="category-overlay-{{ section.id }} position-{{ block.settings.text_position }}">
            {% if block.settings.title != blank %}
              <h3 class="category-title-{{ section.id }}">{{ block.settings.title }}</h3>
            {% endif %}
            {% if block.settings.button_text != blank %}
              <a href="{{ block.settings.button_link }}" class="category-button-{{ section.id }}">
                {{ block.settings.button_text }}
              </a>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

