{% schema %}
{
  "name": "Custom Richtext Hero",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Lorem Ipsum"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s"
    },
    {
      "type": "text",
      "id": "button_1_text",
      "label": "Button 1 Text",
      "default": "Lorem Ipsum"
    },
    {
      "type": "url",
      "id": "button_1_link",
      "label": "Button 1 Link"
    },
    {
      "type": "text",
      "id": "button_2_text",
      "label": "Button 2 Text",
      "default": "Lorem Ipsum"
    },
    {
      "type": "url",
      "id": "button_2_link",
      "label": "Button 2 Link"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#3d1d10"
    },
    {
      "type": "color",
      "id": "description_color",
      "label": "Description Color",
      "default": "#3d1d10"
    },
    {
      "type": "color",
      "id": "button_bg_color",
      "label": "Button Background Color",
      "default": "#3d1d10"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "button_border_color",
      "label": "Button Border Color",
      "default": "#3d1d10"
    },
    {
      "type": "color",
      "id": "button_hover_bg_color",
      "label": "Button Hover Background Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "button_hover_text_color",
      "label": "Button Hover Text Color",
      "default": "#3d1d10"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0,
      "max": 150,
      "step": 5,
      "unit": "px",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 150,
      "step": 5,
      "unit": "px",
      "default": 80
    }
  ],
  "presets": [
    {
      "name": "Custom Richtext Hero"
    }
  ]
}
{% endschema %}

<style>
  .custom-richtext-hero-section {
    background-color: {{ section.settings.background_color }};
    padding: {{ section.settings.padding_top }}px 20px {{ section.settings.padding_bottom }}px;
  }

  .custom-richtext-hero-container {
    max-width: 1200px;
    margin: 0 auto;
    text-align: center;
  }

  .custom-richtext-hero-heading {
    font-size: 32px;
    font-weight: 300;
    color: {{ section.settings.heading_color }};
    margin: 0 0 30px;
    letter-spacing: 0.05em;
    line-height: 1.2;
  }

  .custom-richtext-hero-description {
    font-size: clamp(15px, 2vw, 18px);
    color: {{ section.settings.description_color }};
    line-height: 1.7;
    margin: 0 auto 40px;
    max-width: 900px;
  }

  .custom-richtext-hero-buttons {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 20px;
    align-items: center;
  }

  .custom-richtext-hero-button {
    position: relative;
    display: inline-block;
    padding: 8px 40px;
    background-color: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_text_color }};
    text-decoration: none;
    font-size: 14px;
    font-weight: 300;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    overflow: hidden;
    transition: color 0.4s ease;
    z-index: 1;
    border: 1px solid {{ section.settings.button_border_color }};
    border-radius: 6px !important;
  }

  .custom-richtext-hero-button::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background-color: {{ section.settings.button_hover_bg_color }};
    transition: left 0.4s ease;
    z-index: -1;
  }

  .custom-richtext-hero-button:hover::before {
    left: 0;
  }

  .custom-richtext-hero-button:hover {
    color: {{ section.settings.button_hover_text_color }};
  }

  @media screen and (max-width: 768px) {
    .custom-richtext-hero-section {
      padding: 50px 15px;
    }

    .custom-richtext-hero-heading {
      margin-bottom: 20px;
    }

    .custom-richtext-hero-description {
      margin-bottom: 30px;
    }

    .custom-richtext-hero-buttons {
      gap: 12px;
    }

    .custom-richtext-hero-button {
      flex: 1;
      min-width: 0;
      font-size: 12px;
      padding: 8px 20px;
    }
  }

  @media screen and (max-width: 480px) {
    .custom-richtext-hero-button {
      padding: 8px 15px;
      font-size: 11px;
      letter-spacing: 0.1em;
    }
  }
</style>

<section class="custom-richtext-hero-section">
  <div class="custom-richtext-hero-container">
    {% if section.settings.heading != blank %}
      <h1 class="custom-richtext-hero-heading">{{ section.settings.heading }}</h1>
    {% endif %}

    {% if section.settings.description != blank %}
      <p class="custom-richtext-hero-description">{{ section.settings.description }}</p>
    {% endif %}

    <div class="custom-richtext-hero-buttons">
      {% if section.settings.button_1_text != blank %}
        <a href="{{ section.settings.button_1_link | default: '#' }}" class="custom-richtext-hero-button">
          {{ section.settings.button_1_text }}
        </a>
      {% endif %}

      {% if section.settings.button_2_text != blank %}
        <a href="{{ section.settings.button_2_link | default: '#' }}" class="custom-richtext-hero-button">
          {{ section.settings.button_2_text }}
        </a>
      {% endif %}
    </div>
  </div>
</section>
