          {{ section.settings.column_1_title }}
          <span class="accordion-icon">+</span>
        </h3>
        <ul class="footer-links-list footer-accordion-content">
          {% for block in section.blocks %}
            {% if block.type == 'column_1_link' %}
              <li class="footer-link-item">
                <a href="{{ block.settings.link_url }}" class="footer-link">
                  {{ block.settings.link_text }}
                </a>
              </li>
            {% endif %}
          {% endfor %}
        </ul>
      </div>

      <!-- Quick Links Column -->
      <div class="footer-column">
        <h3 class="footer-column-title footer-accordion-trigger">
          {{ section.settings.column_2_title }}
          <span class="accordion-icon">+</span>
        </h3>
        <ul class="footer-links-list footer-accordion-content">
          {% for block in section.blocks %}
            {% if block.type == 'column_2_link' %}
              <li class="footer-link-item">
                <a href="{{ block.settings.link_url }}" class="footer-link">
                  {{ block.settings.link_text }}
                </a>
              </li>
