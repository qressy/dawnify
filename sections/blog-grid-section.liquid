<style>
  .versani-footer {
    background-color: {{ section.settings.background_color }};
    color: {{ section.settings.text_color }};
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
    position: relative;
  }

  .footer-container {
    max-width: {{ section.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 {{ section.settings.container_padding }}px;
  }

  /* Footer Links Grid */
  .footer-links-grid {
    display: grid;
    grid-template-columns: repeat({{ section.settings.columns_count }}, 1fr);
    gap: {{ section.settings.column_gap }}px;
    padding: {{ section.settings.links_padding_top }}px 0 {{ section.settings.links_padding_bottom }}px;
  }

  .footer-column-title {
    font-size: {{ section.settings.column_title_size }}px;
    font-weight: {{ section.settings.title_font_weight }};
    margin: 0 0 {{ section.settings.column_title_margin }}px;
    letter-spacing: {{ section.settings.title_letter_spacing }}px;
    text-transform: {{ section.settings.column_title_transform }};
  }

  /* Accordion Styles (Hidden on Desktop) */
  .accordion-icon {
    display: none;
  }

  .footer-accordion-trigger {
    cursor: default;
  }

  .footer-accordion-content {
    display: block;
  }

  .footer-links-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-link-item {
    margin-bottom: {{ section.settings.link_spacing }}px;
    list-style: none;
  }

  .footer-link {
    color: {{ section.settings.text_color }};
    text-decoration: none;
    font-size: {{ section.settings.link_font_size }}px;
    line-height: {{ section.settings.link_line_height }};
    opacity: 0.85;
    transition: opacity 0.3s ease;
    display: inline-block;
  }

  .footer-link:hover {
    opacity: 1;
  }

  /* Newsletter Column Styles */
  .footer-column-newsletter {
    display: flex;
    flex-direction: column;
  }

  .newsletter-description-column {
    font-size: {{ section.settings.newsletter_desc_column_size }}px;
    line-height: {{ section.settings.newsletter_desc_column_line_height }};
    margin: 0 0 {{ section.settings.newsletter_desc_column_margin }}px;
    opacity: 0.85;
  }

  .newsletter-form-wrapper-column {
    margin-bottom: {{ section.settings.social_column_margin }}px;
  }

  .newsletter-input-wrapper-column {
    display: flex;
    gap: 0;
    border-bottom: 2px solid {{ section.settings.text_color }};
    padding-bottom: 8px;
    align-items: center;
  }

  .newsletter-email-input-column {
    flex: 1;
    background: transparent;
    border: none;
    color: {{ section.settings.text_color }};
    font-size: {{ section.settings.input_column_font_size }}px;
    padding: 8px 0;
    outline: none;
  }

  .newsletter-email-input-column::placeholder {
    color: rgba(255, 255, 255, 0.6);
  }

  .newsletter-submit-btn-column {
    background: transparent;
    border: none;
    color: {{ section.settings.text_color }};
    cursor: pointer;
    padding: 4px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.3s ease, opacity 0.3s ease;
  }

  .newsletter-submit-btn-column:hover {
    transform: translateX(4px);
    opacity: 0.8;
  }

  .newsletter-success-column {
    color: #4ade80;
    padding: 8px 0;
    margin-bottom: 12px;
    font-size: 13px;
  }

  /* Social Icons in Column */
  .footer-social-icons-column {
    display: flex;
    gap: {{ section.settings.social_column_icon_spacing }}px;
    align-items: center;
  }

  .social-icon-link-column {
    color: {{ section.settings.text_color }};
    width: {{ section.settings.social_column_icon_size }}px;
    height: {{ section.settings.social_column_icon_size }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    opacity: 0.9;
  }

  .social-icon-link-column:hover {
    opacity: 1;
    transform: translateY(-2px);
  }

  .social-icon-link-column svg {
    width: 100%;
    height: 100%;
  }

  /* Keywords Section */
  .footer-keywords-section {
    padding: {{ section.settings.keywords_padding }}px 0;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    margin-top: {{ section.settings.keywords_margin_top }}px;
    text-align: left;
  }

  .keywords-title {
    font-size: {{ section.settings.keywords_title_size }}px;
    font-weight: {{ section.settings.title_font_weight }};
    margin: 0 0 {{ section.settings.keywords_title_margin }}px;
    letter-spacing: {{ section.settings.title_letter_spacing }}px;
    text-transform: {{ section.settings.title_text_transform }};
    text-align: left;
  }

  .keywords-content {
    font-size: {{ section.settings.keywords_font_size }}px;
    line-height: {{ section.settings.keywords_line_height }};
    opacity: 0.75;
    text-align: left;
  }

  .keywords-content a {
    color: {{ section.settings.text_color }};
    text-decoration: none;
    opacity: 0.85;
    transition: opacity 0.3s ease;
  }

  .keywords-content a:hover {
    opacity: 1;
    text-decoration: underline;
  }

  /* Copyright */
  .footer-copyright {
    text-align: center;
    padding-top: {{ section.settings.copyright_padding }}px;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    margin-top: {{ section.settings.copyright_margin_top }}px;
  }

  .copyright-content p {
    margin: 0 0 8px;
    font-size: {{ section.settings.copyright_font_size }}px;
    opacity: 0.7;
  }

  .powered-by {
    font-size: {{ section.settings.powered_by_size }}px;
  }

  /* Responsive Design */
  @media screen and (max-width: 1024px) {
    .footer-links-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: {{ section.settings.mobile_column_gap }}px;
    }
  }

  @media screen and (max-width: 768px) {
    .versani-footer {
      padding: {{ section.settings.mobile_padding }}px 0;
    }

    .footer-container {
      padding: 0 {{ section.settings.mobile_container_padding }}px;
    }

    .footer-links-grid {
      grid-template-columns: {{ section.settings.mobile_columns }};
      gap: {{ section.settings.mobile_column_gap }}px;
      text-align: center;
    }

    /* Mobile Accordion Styles */
    .footer-column {
      border-bottom: 1px solid rgba(255, 255, 255, 0.1);
      padding-bottom: 0;
      margin-bottom: 0;
    }

    .footer-column:last-child {
      border-bottom: none;
    }

    .footer-accordion-trigger {
      cursor: pointer;
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 12px;
      position: relative;
      margin-bottom: 0;
      padding: 16px 0;
    }

    .accordion-icon {
      display: inline-block;
      font-size: 20px;
      line-height: 1;
      transition: transform 0.3s ease;
      font-weight: 300;
    }

    .footer-accordion-trigger.active .accordion-icon {
      transform: rotate(45deg);
    }

    .footer-accordion-content {
      max-height: 0;
      overflow: hidden;
      transition: max-height 0.3s ease-out, padding 0.3s ease-out;
      padding-top: 0;
      padding-bottom: 0;
    }

    .footer-accordion-content.active {
      max-height: 1500px;
      transition: max-height 0.4s ease-in, padding 0.3s ease-in;
      padding-top: 0;
      padding-bottom: 20px;
    }

    .footer-column-newsletter .footer-accordion-content.active {
      max-height: 2500px;
      padding-bottom: 24px;
    }

    .column-title {
      font-size: {{ section.settings.mobile_column_title }}px;
    }

    .footer-link {
      font-size: {{ section.settings.mobile_link_size }}px;
    }

    .keywords-content {
      font-size: {{ section.settings.mobile_keywords_size }}px;
    }

    .footer-keywords-section,
    .keywords-title,
    .keywords-content {
      text-align: center;
    }

    .footer-keywords-section {
      padding-bottom: {{ section.settings.mobile_section_spacing }}px;
      margin-bottom: {{ section.settings.mobile_section_spacing }}px;
    }
  }
</style>

<script>
  (function() {
    function initFooterAccordion() {
      const isMobile = window.innerWidth <= 768;
      const enableAccordion = {{ section.settings.enable_mobile_accordion | json }};
      const footerColumns = document.querySelectorAll('.versani-footer .footer-column');

      footerColumns.forEach(function(column) {
        const trigger = column.querySelector('.footer-accordion-trigger');
        const content = column.querySelector('.footer-accordion-content');

        if (!trigger || !content) return;

        if (isMobile && enableAccordion) {
          // Enable accordion on mobile
          trigger.style.cursor = 'pointer';

          // Close all by default on initial load
          if (!trigger.hasAttribute('data-initialized')) {
            content.classList.remove('active');
            trigger.classList.remove('active');
            trigger.setAttribute('data-initialized', 'true');
          }

          // Remove old event listeners by cloning
          const newTrigger = trigger.cloneNode(true);
          trigger.parentNode.replaceChild(newTrigger, trigger);

          // Add click event
          newTrigger.addEventListener('click', function(e) {
            e.preventDefault();
            e.stopPropagation();

            const thisContent = this.nextElementSibling;
            const isActive = this.classList.contains('active');

            // Close all accordions first (only one open at a time)
            document.querySelectorAll('.versani-footer .footer-accordion-trigger').forEach(function(t) {
              t.classList.remove('active');
            });
            document.querySelectorAll('.versani-footer .footer-accordion-content').forEach(function(c) {
              c.classList.remove('active');
            });

            // If this wasn't active, open it (if it was active, leave it closed)
            if (!isActive) {
              this.classList.add('active');
              if (thisContent) {
                thisContent.classList.add('active');
              }
            }
          });
        } else {
          // Desktop or accordion disabled: show all content
          trigger.style.cursor = 'default';
          content.classList.remove('active');
          trigger.classList.remove('active');
          content.style.maxHeight = 'none';
          content.style.overflow = 'visible';
          content.style.paddingTop = '0';
          content.style.paddingBottom = '0';

          // Remove click handler
          const newTrigger = trigger.cloneNode(true);
          trigger.parentNode.replaceChild(newTrigger, trigger);
        }
      });
    }

    // Initialize on page load
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initFooterAccordion);
    } else {
      initFooterAccordion();
    }

    // Re-initialize on window resize with debounce
    let resizeTimeout;
    window.addEventListener('resize', function() {
      clearTimeout(resizeTimeout);
      resizeTimeout = setTimeout(function() {
        initFooterAccordion();
      }, 250);
    });
  })();
</script>

