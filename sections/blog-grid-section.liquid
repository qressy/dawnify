        <h3 class="footer-column-title footer-accordion-trigger">
          {{ section.settings.column_3_title }}
          <span class="accordion-icon">+</span>
        </h3>
        <ul class="footer-links-list footer-accordion-content">
          {% for block in section.blocks %}
            {% if block.type == 'column_3_link' %}
